namespace ManjaroNews {
    int main (string[] args) {
        bool delay = false;
        if (args.length > 1) {
            delay = args[1] == "--delay";
        }
        var tray_icon = new TrayIcon (delay);
        var ret = tray_icon.run (null);
        if (tray_icon.is_remote) {
            print ("%s\n", "matray is already running!");
        }
        return ret;
    }
}